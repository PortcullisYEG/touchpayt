<div class="container">
  
<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :parent_id %><br>
    <%= collection_select(:product, :parent_id, Product.order(name: :asc).all, :id, :name, include_blank: "Pas de parent") %>
  </div>
  <div class="field">
    <%= f.label :parent_qty %><br>
    <%= f.text_field :parent_qty %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
