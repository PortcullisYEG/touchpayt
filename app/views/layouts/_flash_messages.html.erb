<div class="container">
  <% flash.each do |key, value| %>
    <div class="<%= flash_class(key) %> fade-in alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= value %>
    </div>
  <% end %>
</div>
<script>
	$( document ).ready(function() {
console.log( "ready!" );
$( ".alert-dismissable" ).delay( 2000 ).slideUp(700);

});


</script>